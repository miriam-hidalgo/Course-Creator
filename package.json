  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.4",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "jquery": "^3.3.1",
    "material-ui": "^0.20.2",
    "materialize-css": "^1.0.0-rc.2",
    "mongodb": "^3.1.13",
    "mongoose": "^5.3.16",
    "react-loader-spinner": "^2.3.0",
    "react-materialize": "^2.6.0",
    "react-tap-event-plugin": "^3.0.3",
    "twilio": "^3.28.1"
  }
